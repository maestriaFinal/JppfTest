<project name='FTPServer' basedir="." default="jar">

	<!-- ========================================================================= -->
	<!--                          Property definitions                             -->
	<!-- ========================================================================= -->

	<property name="shared"      value="${basedir}/../shared"/>
	<property name="shared.lib"  value="${shared}/lib"/>
	<property name="shared.img"  value="${shared}/images"/>
	<property name="config.dir"  value="${basedir}/config"/>
	<property name="classes.dir" value="${basedir}/classes"/>	
	<property name="src.dir"     value="${basedir}/src"/>
	<property name="lib.dir"     value="${basedir}/lib"/>
	<property name="javadoc"     value="${basedir}/javadoc"/>
	<property name="result.file" value="FTPServer.jar"/>

	<!-- ========================================================================= -->
	<!--                           Classpath definitions                           -->
	<!-- ========================================================================= -->

	<path id="project.classpath">
		<pathelement location="${classes.dir}"/>
		<pathelement location="${config.dir}"/>
		<fileset dir="${lib.dir}" includes="*.jar"/>
		<fileset dir="${shared.lib}" includes="**/*.jar"/>
	</path>

  <path id="javadoc.classpath">
		<pathelement location="${shared.img}"/>
    <path refid="project.classpath"/>	
  </path>

	<!-- ========================================================================= -->
	<!--                                    Clean                                  -->
	<!-- ========================================================================= -->

  <target name="clean">
    <delete dir="${classes.dir}" quiet="true"/>
  </target>               

	<!-- ========================================================================= -->
	<!--                                    Init                                   -->
	<!-- ========================================================================= -->

	<target name="init" description="Initialize ressources">
 		<mkdir dir="${classes.dir}"/>
	</target>


	<!-- ========================================================================= -->
	<!--                                  Compile                                  -->
	<!-- ========================================================================= -->

	<target name="compile" depends="clean, init">
		<javac srcdir="" destdir="${classes.dir}"
			debug="on" deprecation="off" optimize="on" includes="**/*.java">
	    <classpath refid="project.classpath"/>
	    <compilerarg line="-Xlint:unchecked"/>
			<src path="${src.dir}"/>
		</javac>
		<copy todir="${classes.dir}">
			<fileset dir="${src.dir}">
				<exclude name="**/*.java"/>
				<exclude name="**/package.html"/>
			</fileset>
		</copy>
  </target>

	<!-- ========================================================================= -->
	<!--                                  Jar                                      -->
	<!-- ========================================================================= -->

	<target name="jar" depends="compile">
	  <jar jarfile="${result.file}" index="true">
			<!-- We do not include the client-side classes -->
			<fileset dir="${classes.dir}">
	  		<include name="org/jppf/example/ftp/service/**/*.*"/>
  			<include name="META-INF/**/*.*"/>
	  	</fileset>
	  </jar>
  </target>
	
	<!-- ========================================================================= -->
	<!--                     Build the deployment archive files                    -->
	<!-- ========================================================================= -->

	<target name="zip" depends="jar">
		<property name="zip.file" value="ftpserver-dist.zip"/>
		<delete file="${zip.file}" quiet="true"/>
		<zip destfile="${zip.file}">
			<zipfileset dir="${basedir}" includes="${result.file}" prefix="lib"/>
			<zipfileset dir="${basedir}" includes="lib/*.jar, config/**/*.*, data/*.txt" excludes="config/log4j.properties, config/jppf.properties"/>
		</zip>
		<echo/>
		<echo message="*** The file ${zip.file} is now ready to be deployed ***"/>
		<echo/>
	</target>

	<target name="tar.gz" depends="jar">
		<property name="tar.gz.file" value="ftpserver-dist.tar.gz"/>
    <delete file="${tar.gz.file}" quiet="true"/>
  	<copy toDir="${lib.dir}" file="${result.file}"/>
		<tar destfile="${tar.gz.file}" compression="gzip" basedir="${basedir}"
			includes="lib/*.*, config/**/*.*, data/*.txt" excludes="config/log4j.properties, config/jppf.properties"/>
	  <delete file="${lib.dir}/${result.file}" quiet="true"/>
		<echo/>
		<echo message="*** The file ${tar.gz.file} is now ready to be deployed ***"/>
		<echo/>
	</target>
	
	<!-- ========================================================================= -->
	<!--                     Run the sample application                            -->
	<!-- ========================================================================= -->

	<target name="run">
		<echo message="Running the FTPServer example"/>
		<java fork="yes" classname="org.jppf.example.ftp.runner.FTPRunner" classpathref="project.classpath">
			<jvmarg value="-server"/>
			<jvmarg value="-Djppf.config=jppf.properties"/>
			<jvmarg value="-Dlog4j.configuration=log4j.properties"/>
		</java>       
	</target>

	<!-- ========================================================================= -->
	<!--                        Generate the Javadoc                               -->
	<!-- ========================================================================= -->

	<target name="javadoc" description="Generate all javadoc">
    <delete dir="${javadoc}" quiet="true"/>
    <mkdir dir="${javadoc}"/>
		<javadoc destdir="${javadoc}" access="private" Windowtitle="JPPF - ${ant.project.name}"
			packagenames="**/*.*" classpathref="javadoc.classpath" verbose="false" use="true"
			stylesheetfile="${shared.img}/javadoc.css" additionalparam="-quiet">
			<packageset dir="${src.dir}"/>
      <link href="https://docs.oracle.com/javase/7/docs/api"/>
      <link href="http://www.jppf.org/api"/>
			<doctitle><![CDATA[JPPF - ${ant.project.name} Sample]]></doctitle>
			<header>
				<![CDATA[
					<table><tr><td valign="center">
						<a href="http://www.jppf.org" target="_top">
							<img src="http://www.jppf.org/images/jppf_group_large.gif" border="0"/>
						</a>
					</td></tr></table>
				]]>
			</header>
			<bottom>
				<![CDATA[
					<font face="Arial" size=2 color="#6D78B6"><i>Copyright &copy; 2005-2015 JPPF Team.</i></font>
				]]>
			</bottom>
		</javadoc>
		<copy todir="${javadoc}/resources" overwrite="true">
			<fileset dir="${shared.img}">
				<include name="logo2.gif"/>
				<include name="inherit.gif"/>
			</fileset>
		</copy>
	</target>

</project> 
